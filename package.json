{
  "name": "hiero-json-rpc-relay-proxy",
  "version": "1.0.0",
  "description": "Monorepo for Ethereum transaction routing proxy with Hedera Consensus Service integration",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean:db && rm -rf node_modules packages/*/node_modules",
    "clean:db": "node scripts/clean.js",
    "start": "npm run start:proxy",
    "start:proxy": "npm run start --workspace=packages/proxy",
    "start:prover": "npm run start --workspace=packages/prover",
    "dev": "npm run dev:proxy",
    "dev:proxy": "npm run dev --workspace=packages/proxy",
    "dev:prover": "npm run dev --workspace=packages/prover",
    "test": "npm run test:workspaces && npm run test:integration",
    "test:common": "npm test --workspace=packages/common",
    "test:proxy": "npm test --workspace=packages/proxy",
    "test:prover": "npm test --workspace=packages/prover",
    "test:integration": "node --test test/*.test.js",
    "test:workspaces": "npm test --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install": "npm run install:hooks",
    "install:all": "npm install --workspaces",
    "install:hooks": "scripts/install-hooks.sh"
  },
  "author": "Giuseppe Bertone <giuseppe.bertone@proton.me>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
